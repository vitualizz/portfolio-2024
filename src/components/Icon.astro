---
import Ruby from '../components/icons/Ruby.astro'
import Javascript from '../components/icons/Javascript.astro'
import Python from '../components/icons/Python.astro'
import Typescript from '../components/icons/Typescript.astro'
import Sql from '../components/icons/Sql.astro'

export type IconType = 'ruby' | 'javascript' | 'typescript' | 'python' | 'sql'
export interface Props {
  name: IconType
}
const { name } = Astro.props as Props

const map: Record<IconType, string> = {
  javascript: Javascript,
  ruby: Ruby,
  typescript: Typescript,
  python: Python,
  sql: Sql
}

const Component = map[name]
---

<Component />
