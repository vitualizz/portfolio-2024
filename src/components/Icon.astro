---
import type { IconType } from '../types/Icons.types.ts'
import Ruby from '../components/icons/Ruby.astro'
import Javascript from '../components/icons/Javascript.astro'
import Python from '../components/icons/Python.astro'
import Typescript from '../components/icons/Typescript.astro'
import Sql from '../components/icons/Sql.astro'
import Rails from '../components/icons/Rails.astro'
import React from '../components/icons/React.astro'
import Tailwind from '../components/icons/Tailwind.astro'
import AstroIcon from '../components/icons/Astro.astro'
import Vue from '../components/icons/Vue.astro'
import NodeJS from '../components/icons/Node.astro'
import Postgres from '../components/icons/Postgres.astro'
import Aws from '../components/icons/Aws.astro'
import Selenium from '../components/icons/Selenium.astro'
import Git from '../components/icons/Git.astro'
import Docker from '../components/icons/Docker.astro'
import ElasticSearch from '../components/icons/ElasticSearch.astro'
import AwsLambda from '../components/icons/AwsLambda.astro'
import DynamoDb from '../components/icons/Dynamodb.astro'
import Redux from '../components/icons/Redux.astro'

export interface Props {
  name: IconType
}
const { name } = Astro.props as Props

const map: Record<IconType, string> = {
  javascript: Javascript,
  ruby: Ruby,
  typescript: Typescript,
  python: Python,
  sql: Sql,
  rails: Rails,
  react: React,
  tailwind: Tailwind,
  astro: AstroIcon,
  vue: Vue,
  node: NodeJS,
  postgres: Postgres,
  aws: Aws,
  selenium: Selenium,
  git: Git,
  docker: Docker,
  elasticsearch: ElasticSearch,
  lambda: AwsLambda,
  dynamodb: DynamoDb,
  redux: Redux
}

const Component = map[name]
---

<Component class="rounded-lg" />
