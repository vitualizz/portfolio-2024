---
import Icon, { type IconType } from '../components/Icon.astro'

type Props = {
  title: string
  icon: IconType
}

const { title, icon } = Astro.props as Props
---

<div class="flex flex-col items-center gap-1">
  <div class="h-8 w-8 rounded-xl">
    <Icon name={icon} />
  </div>
  <p class="text-sm">{title}</p>
</div>
